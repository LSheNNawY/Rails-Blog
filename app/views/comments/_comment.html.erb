<div class="card text-dark bg-light mb-3">
  <div class="card-body">
    <p>
      <strong>Commenter:</strong>
      <%= comment.commenter %>
    </p>
    <p>
      <strong>Comment:</strong>
      <%= comment.body %>
    </p>
    <p class="text-center">
      <%= link_to 'Delete Comment', [comment.article, comment],
                  method: :delete,
                  data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </p>
  </div>
</div>
